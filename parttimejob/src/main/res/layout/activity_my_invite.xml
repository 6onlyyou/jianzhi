<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fu.com.parttimejob.activity.MyInviteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的邀请码"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_invite" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="213dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_invite_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="214dp"
        android:text="你的邀请码"
        android:textColor="#ff444444"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="241dp"
        android:text="123452"
        android:textColor="#ff444444"
        android:textSize="32sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/putshare"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="295dp"
        android:background="@mipmap/bg_invite_btn"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="40dp"
        android:text="填写邀请码"
        android:textColor="#ffffffff"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="356dp"
        android:background="@mipmap/bg_invite_btn"
        android:drawableLeft="@mipmap/ic_share"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="40dp"
        android:text="分享邀请海报"
        android:textColor="#ffffffff"
        android:textSize="22sp" />

    <TextView
        android:layout_width="273dp"
        android:layout_height="21dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="441dp"
        android:text="成功邀请好友下载APP，你都能从中获益"
        android:textColor="#ff444444"
        android:textSize="15sp" />

    <TextView
        android:layout_width="143dp"
        android:layout_height="21dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="461dp"
        android:text="已成功邀请好友34人"
        android:textColor="#ff444444"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_invite_top" />


</FrameLayout>
