<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="广告详情"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ava"
            android:layout_width="73dp"
            android:layout_height="69dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name"
            android:layout_width="95dp"
            android:layout_height="22dp"
            android:layout_alignTop="@+id/ava"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/ava"
            android:text=""
            android:textColor="#ff222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/ava"
            android:text="发布时间：2019-06-06"
            android:textColor="#ff8b8b8b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/time"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/ava"
            android:text="地点：杭州"
            android:drawableRight="@mipmap/ic_location"
            android:drawablePadding="10dp"
            android:textColor="#ff8b8b8b"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ji_gouton"
            android:layout_width="85dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="关闭广告"
            android:textColor="#ffffffff"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView

        android:id="@+id/ad_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="21dp"
        android:text=" 我是一个活泼开朗，我是一个活泼开朗我是一个活泼"
        android:textColor="#ff8b8b8b"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/ad_cimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/zhuanfa_ad"
        android:layout_width="252dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@mipmap/rectangle"
        android:gravity="center"
        android:text="分享群领取更多金币"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        android:textSize="15sp" />

</LinearLayout>
