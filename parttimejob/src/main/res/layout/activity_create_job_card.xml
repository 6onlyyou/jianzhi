<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateJobCardActivity">

    <TextView
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="点击跳过"
        android:textColor="#ff8b8b8b"
        android:textSize="15sp" />

    <TextView
        android:layout_width="184dp"
        android:layout_height="33dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="创建您的招聘名片"
        android:textColor="#ff444444"
        android:textSize="23sp" />

    <TextView
        android:layout_width="165dp"
        android:layout_height="21dp"
        android:layout_marginLeft="15dp"
        android:text="为您推荐更优秀的求职者"
        android:textColor="#ff8b8b8b"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:text="真实头像"
            android:textColor="#ff8b8b8b"
            android:textSize="15sp"
            />

        <ImageView
android:id="@+id/ava"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <TextView
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:text="真实姓名"
        android:textColor="#ff8b8b8b"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="@null"
        android:hint="点击输入姓名"
        android:singleLine="true"
        android:textColorHint="#ffc0c0c0"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorLine" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:text="手机号"
        android:textColor="#ff8b8b8b"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="@null"
        android:hint="点击输入手机号"
        android:singleLine="true"
        android:textColorHint="#ffc0c0c0"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorLine" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:text="您的店铺/企业"
        android:textColor="#ff8b8b8b"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/shopEt"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="@null"
        android:hint="点击输入您的店铺/企业"
        android:singleLine="true"
        android:textColorHint="#ffc0c0c0"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorLine" />
</LinearLayout>