<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fu.com.parttimejob.activity.WriteInviteCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写邀请码"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_invite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="56dp"
            android:background="@mipmap/ic_write_invite"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="137dp"
                android:layout_height="38dp"
                android:layout_marginTop="26dp"
                android:text="邀请码兑换"
                android:textColor="#ff444444"
                android:textSize="27sp" />

            <TextView
                android:layout_width="217dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="填写对方验证码可获得60金币，可提现为现金哦"
                android:textColor="#ff8b8b8b"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/writeInvite"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_write_invite"
                android:gravity="center"
                android:hint="请输入对方邀请码"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="257dp"
                android:layout_height="51dp"
                android:layout_marginTop="68dp"
                android:background="@mipmap/bg_invite_btn"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="22sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
