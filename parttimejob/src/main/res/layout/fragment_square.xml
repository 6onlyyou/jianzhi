<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fu.com.parttimejob.fragment.SquareFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="184px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="45px"
            android:text="红包广场"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="184px">

        <ImageView
            android:id="@+id/bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/box1"
            android:layout_width="430px"
            android:layout_height="430px"
            android:layout_marginLeft="152px"
            android:layout_marginTop="642px" />

        <ImageView
            android:id="@+id/box2"
            android:layout_width="430px"
            android:layout_height="430px"
            android:layout_marginLeft="553px"
            android:layout_marginTop="498px" />

        <ImageView
            android:id="@+id/box3"
            android:layout_width="430px"
            android:layout_height="430px"
            android:layout_marginLeft="553px"
            android:layout_marginTop="1031px" />

    </FrameLayout>


</FrameLayout>
