<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fu.com.parttimejob.fragment.SquareFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="184px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:paddingTop="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="红包广场"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </RelativeLayout>


    <FrameLayout
        android:layout_marginTop="175px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="1080px"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/box1"
            android:layout_marginTop="704px"
            android:layout_marginLeft="99px"
            android:layout_width="498px"
            android:layout_height="439px" />
        <ImageView
            android:id="@+id/box2"
            android:layout_width="498px"
            android:layout_marginLeft="550px"
            android:layout_marginTop="507px"
            android:layout_height="447px" />
        <ImageView
            android:id="@+id/box3"
            android:layout_marginLeft="500px"
            android:layout_marginTop="1001px"
            android:layout_width="562px"
            android:layout_height="472px" />

    </FrameLayout>


</FrameLayout>
